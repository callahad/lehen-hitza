{
  "description": "Modifies the browser's Accept-Language header to request content in the Basque language, if available.",
  "manifest_version": 2,
  "name": "Prefer Basque",
  "version": "1.0",
  "homepage_url": "https://github.com/callahad/prefer-basque",
  "icons": {
    "16": "icon16.png",
    "24": "icon24.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "permissions": [
    "webRequest", "webRequestBlocking", "http://*/*", "https://*/*"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_title": "Prefer Basque Language",
    "default_popup": "popup.html"
  }
}
