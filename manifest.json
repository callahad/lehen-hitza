{
  "description": "Modifies the browser's Accept-Language header to request content in the Basque language, if available.",
  "manifest_version": 2,
  "name": "Prefer Basque",
  "version": "1.0",
  "homepage_url": "https://github.com/callahad/prefer-basque",
  "icons": {
    "16": "icons/16.png",
    "24": "icons/24.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },

  "permissions": [
    "webRequest", "webRequestBlocking", "http://*/*", "https://*/*"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": {
      "16": "icons/16.png",
      "24": "icons/24.png",
      "32": "icons/32.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    },
    "default_title": "Prefer Basque Language",
    "default_popup": "popup.html"
  }
}
